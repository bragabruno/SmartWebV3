# SmartWebV3 Environment Variables
# Copy this file to .env.local and fill in your values

# Database (Supabase)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Email Provider Configuration
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-app-password
EMAIL_FROM=noreply@smartwebv3.com

# Google OAuth Provider
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft Azure AD Provider (for B2B customers)
AZURE_AD_CLIENT_ID=your-azure-ad-client-id
AZURE_AD_CLIENT_SECRET=your-azure-ad-client-secret
AZURE_AD_TENANT_ID=your-azure-ad-tenant-id

# Lead Generation Module
N8N_WEBHOOK_URL=your-n8n-webhook-url
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# AI Cold Caller CRM Module
OPENAI_API_KEY=your-openai-api-key
VOICE_API_PROVIDER=your-voice-provider
DOCUSIGN_API_KEY=your-docusign-api-key

# Application Settings
NODE_ENV=development
LOG_LEVEL=info